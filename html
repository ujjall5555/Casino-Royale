    <h1>ðŸŽ° Lucky Spin</h1>
    <div class="status">
      Balance: <span id="balance"></span> | Bet: <span id="betLabel"></span> | Last Win: <span id="lastWin"></span>
    </div>
    <div class="reels" id="reels"></div>
    <div class="controls">
      <button class="ghost" id="decBet">âˆ’</button>
      <button class="ghost" id="incBet">+</button>
      <button class="primary" id="spin">SPIN</button>
      <button class="danger" id="reset">Reset</button>
    </div>
  </div>  <script>
    const START_BALANCE = 1000;
    const BET_STEPS = [1,2,5,10,20,50,100];
    const SYMBOLS = [
      { id:'cherry', emoji:'ðŸ’', payout:5 },
      { id:'lemon', emoji:'ðŸ‹', payout:4 },
      { id:'orange', emoji:'ðŸŠ', payout:6 },
      { id:'grape', emoji:'ðŸ‡', payout:8 },
      { id:'bell', emoji:'ðŸ””', payout:12 },
      { id:'seven', emoji:'7ï¸âƒ£', payout:25 },
      { id:'diamond', emoji:'ðŸ’Ž', payout:40 },
      { id:'crown', emoji:'ðŸ‘‘', payout:80 }
    ];

    let balance = +localStorage.getItem('casino.balance') || START_BALANCE;
    let betIdx = 3;

    const balanceEl = document.getElementById('balance');
    const betLabel = document.getElementById('betLabel');
    const lastWinEl = document.getElementById('lastWin');
    const reelsEl = document.getElementById('reels');

    function format(n){ return n.toLocaleString(); }

    function renderStatus(){
      balanceEl.textContent = format(balance);
      betLabel.textContent = BET_STEPS[betIdx];
      lastWinEl.textContent = 0;
    }

    function randomSymbol(){
      return SYMBOLS[Math.floor(Math.random()*SYMBOLS.length)];
    }

    function renderReels(symbols){
      reelsEl.innerHTML = '';
      symbols.forEach(s => {
        const div = document.createElement('div');
        div.className = 'col';
        div.textContent = s.emoji;
        reelsEl.appendChild(div);
      });
    }

    function spin(){
      const bet = BET_STEPS[betIdx];
      if(balance < bet){ alert('Not enough balance'); return; }
      balance -= bet;
      const results = [randomSymbol(), randomSymbol(), randomSymbol()];
      renderReels(results);
      let win = 0;
      if(results[0].id === results[1].id && results[1].id === results[2].id){
        win = bet * results[0].payout;
      }
      balance += win;
      lastWinEl.textContent = win;
      localStorage.setItem('casino.balance', balance);
      renderStatus();
    }

    document.getElementById('spin').onclick = spin;
    document.getElementById('incBet').onclick = ()=>{ if(betIdx < BET_STEPS.length-1) betIdx++; renderStatus(); };
    document.getElementById('decBet').onclick = ()=>{ if(betIdx > 0) betIdx--; renderStatus(); };
    document.getElementById('reset').onclick = ()=>{ balance = START_BALANCE; renderStatus(); localStorage.setItem('casino.balance', balance); };

    renderStatus();
    renderReels([randomSymbol(),randomSymbol(),randomSymbol()]);
  </script></body>
